[push]
    default = current
[core]
    excludesfile = ~/.gitignore
    pager = diff-highlight | diff-so-fancy | less --tabs=1,5 -R
[merge]
    tool = meld
[color]
    ui = always
[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"
